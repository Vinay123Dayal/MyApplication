<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".EventProgress">


    <TextView
        android:id="@+id/create_event_name"
        android:layout_width="wrap_content"
        android:text="Cricket"
        android:textSize="30dp"
        android:layout_height="wrap_content">

    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Zone"
            android:textSize="30dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/create_zone"
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:text="South"
            android:textSize="30dp"
            android:layout_height="wrap_content"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Location"
            android:textSize="30dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/create_location"
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:text="Delhi"
            android:textSize="30dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Total Slots"
            android:textSize="30dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/create_total_slots"
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:text="40"
            android:textSize="30dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="Slots Left"
            android:textSize="30dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/create_rest_slots"
            android:layout_marginLeft="80dp"
            android:layout_width="wrap_content"
            android:text="10"
            android:textSize="30dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/create_reached"
            android:layout_width="wrap_content"
            android:text="Reached"
            android:textSize="20dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/create_cancel"
            android:layout_marginLeft="60dp"
            android:layout_width="wrap_content"
            android:text="Cancel"
            android:textSize="20dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</LinearLayout>